@using CASS_Portal.Models;
@model BulkQuotes; 

<!DOCTYPE html>
<html>
<head>
   
</head>
<body>
    <h4>Albert Einstein Quotes</h4>
    <hr/>
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th width="500px">Quote</th>
            <th width="100px">Type</thwid>
        </tr>
        @if (Model.Short.Count !=0)
        {
            @foreach (Quoteable quotes in Model.Short)
        {
                <tr>
                <td>@quotes.content </td>
                <td>Short</td>

                </tr>
        }   
        }
        @if (Model.Medium.Count != 0)
        {
            @foreach (Quoteable quotes in Model.Medium)
            {
                        <tr>
                        <td>@quotes.content </td>
                        <td>Medium</td>

                        </tr>
            }   
        }
        @if (Model.Long.Count != 0)
        {
            @foreach (Quoteable quotes in Model.Long)
            {
                <tr>
                    <td>@quotes.content </td>
                    <td>Long</td>

                </tr>
            }
        }
     
    </table>
</body>
</html>


